<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="5sp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20sp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="350sp"
            android:layout_height="263dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="16sp">

            <ImageView
                android:id="@+id/image_product"
                android:layout_width="130sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:orientation="vertical"
                android:padding="0sp">

                <!-- Product title -->
                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/text"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Product price -->
                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/text"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <!-- Product distance -->
                <TextView
                    android:id="@+id/product_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="1.5 km, 10 minutos caminando, 5 minutos en auto"
                    android:textColor="@color/dark_gray"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <!-- Product date -->
                <TextView
                    android:id="@+id/product_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="12/12/2024"
                    android:textColor="@color/dark_gray"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <!-- Product quantity -->
                <TextView
                    android:id="@+id/product_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/text"
                    android:textSize="0sp"
                    android:visibility="gone" />

                <!-- Product desc -->
                <TextView
                    android:id="@+id/product_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/text"
                    android:textSize="0sp"
                    android:visibility="gone" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_buy"
                        android:layout_width="140sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:backgroundTint="@color/buy_button"
                        android:text="Comprar"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/btn_add_to_cart"
                        android:layout_width="140sp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/cart_button"
                        android:text="Agregar al carrito"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
